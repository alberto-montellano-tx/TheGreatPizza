@model IEnumerable<PizzaClient.ViewModel.PizzaViewModel>

@{
    ViewBag.Title = "GetAllPizzas";
}

<h2>GetAllPizzas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pizza.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pizza.Ingredients)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pizza.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pizza.Name)
        </td>
        <td>
            @Html.ListBox("Id", new SelectList(item.Pizza.Ingredients, "Id", "Name"))
        </td>

        <td>
            @Html.ActionLink("Edit", "EditPizza", new { id = item.Pizza.Id, name = item.Pizza.Name, pizza = item }) |
            @Html.ActionLink("Details", "Details", new { id = item.Pizza.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Pizza.Id })
        </td>
    </tr>
    }

</table>

